<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/contenedor">

    <Button
            android:text="@string/permission_button_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCamera"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewCamera"/>
    <Button
            android:text="@string/permission_button_contacts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/buttonContacts"
            android:layout_marginTop="32dp"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toBottomOf="@+id/textViewCamera"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
    />
    <Button
            android:text="@string/permission_button_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAudio"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewContacts"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCamera"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCamera"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewContacts"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonContacts"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAudio"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAudio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/permission_button_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAll"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>